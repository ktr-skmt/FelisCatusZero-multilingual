<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>uima.cr.QuestionReader</implementationName>
  <processingResourceMetaData>
    <name>Question Collection Reader Descriptor</name>
    <description>日本語の論述問題Collection Reader</description>
    <version>1.0</version>
    <vendor>K.Sakamoto</vendor>
    <configurationParameters searchStrategy="language_fallback">
      <configurationParameter>
        <name>inputDataFilePath</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>inputDataFilePath</name>
        <value>
          <string>src/main/resources/foobar/</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import name="desc.ts.typeSystem"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs>
          <type allAnnotatorFeatures="true">us.feliscat.types.Exam</type>
        </outputs>
        <inputSofas/>
        <outputSofas>
          <sofaName>ja</sofaName>
          <sofaName>en</sofaName>
        </outputSofas>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</collectionReaderDescription>